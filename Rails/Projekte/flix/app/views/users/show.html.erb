<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<% if @favorited_movies.any? %>
	<h3>Favorit Movies</h3>
	<p>
		<ul>
				<% @favorited_movies.each do |movie| %>
					<li><%= movie.title %></li>
				<% end %>
		</ul>
	</p>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
